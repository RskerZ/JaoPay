<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center_horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_test"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFC9C9"
    android:orientation="vertical">


    <ScrollView
        android:id="@+id/scrollView5"
        android:layout_width="411dp"
        android:layout_height="550dp"

        android:fillViewport="true"
        tools:layout_editor_absoluteX="1dp">

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:scrollbars="vertical">

            <ImageView
                android:layout_marginTop="20dp"
                android:id="@+id/imageView10"
                android:layout_width="545dp"
                android:layout_height="205dp"

                app:srcCompat="@drawable/se"
                tools:layout_editor_absoluteY="8dp" />

            <TextView
                android:id="@+id/textView112"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="蘋果推出新一代智慧型手機 iPhone SE，由於整體外型延續 iPhone 8 的機身設計，使經典的 Touch ID 得以回歸，同時導入 iPhone 11 系列手機的部分功能，以及規格配置。採用 4.7 吋 Retina HD 顯示器，搭載 A13 Bionic 仿生晶片、第 3 代神經網路引擎，支援 18W 快充、Qi 無線充電，具備 IP67 防塵防水等級；另有 NFC、eSIM、藍牙 5.0 與 Wi-Fi 6 等功能。"
                tools:layout_editor_absoluteX="24dp"
                tools:layout_editor_absoluteY="216dp" />


            <ImageView
                android:layout_marginTop="20dp"
                android:id="@+id/imageView7"
                android:layout_width="400dp"
                android:layout_height="300dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/se2"
                tools:layout_editor_absoluteX="5dp"
                tools:layout_editor_absoluteY="340dp" />

            <TextView
                android:id="@+id/textView412"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="◎iOS 13 作業系統\n\n◎ 4.7 吋 1,334 x 750pixels 解析度 IPS 觸控螢幕（326ppi）\n\n◎A13 Bionic 六核心仿生晶片\n\n◎ 64GB ROM\n\n◎ 1,200 萬畫素、700 萬畫素前鏡頭\n\n◎ 4G、Wi-Fi 6 藍牙 5.0\n\n◎ IP67 防水防塵\n\n◎ Touch ID 指紋辨識\n\n◎ 支援 18W 快充、Qi 無線充電"
                tools:layout_editor_absoluteX="9dp"
                tools:layout_editor_absoluteY="672dp" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button20"
            android:layout_width="97dp"
            android:layout_height="52dp"
            android:background="@drawable/btnstyle"
            android:text="購  買"
            android:textSize="12pt"
            android:layout_marginRight="40dp"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="755dp" />

        <Button
            android:id="@+id/button15"
            android:layout_width="97dp"
            android:layout_height="52dp"
            android:background="@drawable/btnstyle"
            android:text="返  回"
            android:textSize="12pt"
            tools:layout_editor_absoluteX="220dp"
            tools:layout_editor_absoluteY="755dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:text="100W JaoPay幣 即刻擁有"
        android:layout_marginTop="10dp"
        android:textSize="12pt"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="697dp" />

</LinearLayout>